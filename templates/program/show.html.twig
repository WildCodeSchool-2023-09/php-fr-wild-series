        <h1 class="mt-4">{{ program.title }}</h1>
        <section class="row">
            <div class="col-lg-6 p-0 d-flex justify-content-center align-items-center">
                <img src="{{ upload_program_dir }}/{{ program.poster }}" class="img-fluid d-sm-block" alt="">
            </div>
