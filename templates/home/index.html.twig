                            <img src="{{ upload_program_dir }}/{{ programFantastique .poster }}" alt="got">
                            <h2><a href="{{ path('program_show', {id: programFantastique .id }) }}">{{ programFantastique .title }}</a></h2>
                            <i class="fa-regular fa-star"></i>
                        </div>
                    </div>
                {% endfor %}
            </div>
    </section>
    <section>
            <h2>Séries Animation</h2>
            <div class="row">
                {% for programAnimation in programsAnimation %}
                    <div class="col-3 mt-4 mb-4">
                        <div class="card">
                            <img src="{{ upload_program_dir }}/{{ programAnimation .poster }}" alt="got">
                            <h2><a href="{{ path('program_show', {id: programAnimation .id }) }}">{{ programAnimation .title }}</a></h2>
                            <i class="fa-regular fa-star"></i>
                        </div>
                    </div>
                {% endfor %}
            </div>
    </section>
{% endblock %}
